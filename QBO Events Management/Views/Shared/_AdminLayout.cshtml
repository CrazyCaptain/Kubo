<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Admin</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/additional/qboAdmin.css")
    @Scripts.Render("~/bundles/modernizr")
    @using Microsoft.AspNet.Identity

</head>
<body>



    <div class="navbar navbar-inverse navbar-fixed-left">
        <a class="navbar-brand" href="#">
            <img src="@Url.Content("~/Content/img/logo.png")" class="img-responsive" alt="Image" />
        </a>
        <ul class="nav navbar-nav">
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
            <li><a href="#">Hello, @User.Identity.GetUserName() !</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            <li>@Html.ActionLink("Create Event", "Create")</li>
            <li>@Html.ActionLink("View Event", "Index")</li>
            <li><a href="#">Link5</a></li>
            }
        }
        </ul>
    </div>

    

    <div class="container body-content">
        @RenderBody()

    </div>



        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
